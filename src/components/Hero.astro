<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";


  gsap.registerPlugin(ScrollTrigger);


  gsap.to("#parallax-bg", {
    yPercent: 30,
    ease: "none",
    scrollTrigger: {
      trigger: "section",
      start: "top top", 
      end: "bottom top",
      scrub: true
    }
  });


  gsap.to("#hero-content", {
    yPercent: -50,
    opacity: 0,
    ease: "none",
    scrollTrigger: {
      trigger: "section",
      start: "top top",
      end: "bottom top",
      scrub: true
    }
  });
</script>